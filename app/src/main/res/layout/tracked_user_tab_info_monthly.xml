<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/monthly_distance_walked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="0 KM"
        android:textColor="#FF9800"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/walked_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Walked this month"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/month_average_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="0 MPH"
        android:textColor="#FF9800"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/average_speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Average speed of this month"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_time_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="How longe they have been active?"
        android:textColor="#9e9e9e"
        android:textSize="14sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/month_idle_chart"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <TextView
            android:id="@+id/no_data_available"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/text_no_data"
            android:textColor="#9e9e9e"
            android:textSize="14sp"
            android:visibility="invisible" />

    </FrameLayout>

</LinearLayout>